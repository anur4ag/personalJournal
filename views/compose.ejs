<%- include("partials/header.ejs") -%>
<h1>Compose</h1>
<div class="container">
<form action="/compose" method="post" >
    <div class="form-group">
        <label for="newBlogTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" id="newBlogTitle">
    </div>
    <div class="form-group">
        <label for="newBlogContent">Post</label>
        <textarea name="postBody" class="form-control" id="newBlogContent" cols="30" rows="10"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-primary btn-lg">Publish</button>
</form>
</div>
<%- include("partials/footer.ejs") -%>